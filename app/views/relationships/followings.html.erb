<% if @users.exists? %>
  <% @users.each do |user| %>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image, size: "100x100" %></td>
          <td><%= user.name %></td>
          <td><%= user.relationships.count %></td>
          <td><%= user.reverse_of_relationships.count %></td>
          <td><%= link_to 'Show',user_path(user.id) %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% end %>